{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "rawtx",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}/../rrr/devclutter/",
            "program": "${workspaceFolder}/../rrr/devclutter/rawtx.py",
            "args": [
                "--verbose",
                "encode",
                "--nonce", "4",
                // "truffle/build/contracts/SimpleStorage.json",
                "truffle/build/contracts/Migrate.json",
                "-k", "../rrr/nodes/node0/genesis-wallet.key"
                //"-x", "../avid/credentials/value-chain-dev-robin/asset-type-owner-key-raw"
            ]
        },
        {
            "name": "node docker remote",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "port": 2345,
            "host": "127.0.0.1",
            "remotePath": "/go/src",
            "cwd": "${workspaceFolder}/src"
        },
        {
            "name": "rororo genextra 1",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/src/github.com/ethereum/go-ethereum/cmd/rororo",
            "env": { "PRIVATE_CONFIG":"ignore"},
            "args": [
                "genextra",
                "${workspaceFolder}/../devclutter/static-nodes.json",
                "--datadir", "${workspaceFolder}/../nodes/node0/data",
                "--key", "${workspaceFolder}/../nodes/node0/key"
            ]
        },

        {
            "name": "geth node",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/src/github.com/ethereum/go-ethereum/cmd/geth",
            "env": { "PRIVATE_CONFIG":"ignore"},
            "args": [
                "--networkid", "53456",
                "--nodiscover", "--netrestrict", "127.0.0.1/24",
                // "--bootnodes", "enode://85fb8ceeb849caace57ee5adac0d644f0d1f57f097c305677f98b3dc59ead2c97b3ffc4320007487238f16cd3338eeaf0092f845b8dbc284751a9bc6431d059c@127.0.0.1:7199?discport=30301",
                "--nodekey", "${workspaceFolder}/../nodes/node0/key",
                "--datadir", "${workspaceFolder}/../nodes/node0/data",
                "--port", "7200",
                "--rrr.nc", "2", "--rrr.ne", "3", "--rrr.q", "2", "--rrr.roundlength", "6500", "--rrr.confirmphase=3500",
                "--gcmode", "archive", "--syncmode", "full",
                "--mine", "--minerthreads", "1", "--miner.etherbase", "0xfddc8ec119e799a3fb2c3455cabe72a1bd59fb5a", "--miner.gastarget", "3000000000",
                "--rpc",
                "--rpcport", "8300",
                "--rpccorsdomain", "*", "--rpcvhosts", "*", "--rpcaddr", "0.0.0.0",
                "--rpcapi", "admin,db,eth,debug,miner,net,shh,txpool,personal,web3,quorum",
                "--ws",
                "--wsport", "8400",
                "--wsorigins", "*", "--wsaddr", "0.0.0.0",
                "--verbosity", "5", "--vmodule", "p2p/*=5"
            ]
        },
        {
            "name": "geth rrr genesis",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "preLaunchTask": "reset genesis",
            "program": "${workspaceFolder}/src/github.com/ethereum/go-ethereum/cmd/geth",
            "env": { "PRIVATE_CONFIG":"ignore"},
            "args": [
                "--datadir", "${workspaceFolder}/../nodes/node0/data",
                "--rrr.candidates", "6",
                "--rrr.endorsers", "101",
                "init",
                "${workspaceFolder}/../nodes/node0/genesis.json"
            ]
        },
        {
            "name": "geth dumpconfig",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/src/github.com/ethereum/go-ethereum/cmd/geth",
            "env": { "PRIVATE_CONFIG":"ignore"},
            "args": [
                "--datadir", "${workspaceFolder}/nodes/node0/data",
                "--rrr.candidates", "6",
                "--rrr.endorsers", "101",
                "--gcmode", "archive",
                "--syncmode", "full",
                "--verbosity", "3",
                "--networkid", "99",
                "--miner.gastarget", "3000000000",
                "--rpc",
                "--rpccorsdomain", "*",
                "--rpcvhosts", "*",
                "--rpcaddr", "0.0.0.0",
                "--ws",
                "--wsorigins", "*",
                "--wsaddr", "0.0.0.0",
                "--rpcapi", "admin,db,eth,debug,miner,net,shh,txpool,personal,web3,quorum",
                "dumpconfig"
            ]
        }
    ]
}
