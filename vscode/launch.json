{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${fileDirname}",
            "env": {},
            "args": []
        },
        {
            "name": "geth node",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/src/github.com/ethereum/go-ethereum/cmd/geth",
            "env": { "PRIVATE_CONFIG":"ignore"},
            "args": [
                "--datadir", "${workspaceFolder}/../rororo-nodes/default-node/data",
                "--rororo.candidates", "6",
                "--rororo.endorsers", "101",
                "--gcmode", "archive",
                "--syncmode", "full",
                "--verbosity", "3",
                "--networkid", "99",
                "--miner.gastarget", "3000000000",
                "--rpc",
                "--rpccorsdomain", "*",
                "--rpcvhosts", "*",
                "--rpcaddr", "0.0.0.0",
                "--ws",
                "--wsorigins", "*",
                "--wsaddr", "0.0.0.0",
                "--rpcapi", "admin,db,eth,debug,miner,net,shh,txpool,personal,web3,quorum",
            ]
        },
        {
            "name": "geth rororo genesis",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "preLaunchTask": "reset genesis",
            "program": "${workspaceFolder}/src/github.com/ethereum/go-ethereum/cmd/geth",
            "env": { "PRIVATE_CONFIG":"ignore"},
            "args": [
                "--datadir", "${workspaceFolder}/../rororo-nodes/default-node/data",
                "--rororo.candidates", "6",
                "--rororo.endorsers", "101",
                "init",
                "${workspaceFolder}/../rororo-nodes/default-node/genesis.json"
            ]
        },
        {
            "name": "geth dumpconfig",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/src/github.com/ethereum/go-ethereum/cmd/geth",
            "env": { "PRIVATE_CONFIG":"ignore"},
            "args": [
                "--datadir", "${workspaceFolder}/rororo-nodes/default-node/data",
                "--rororo.candidates", "6",
                "--rororo.endorsers", "101",
                "--gcmode", "archive",
                "--syncmode", "full",
                "--verbosity", "3",
                "--networkid", "99",
                "--miner.gastarget", "3000000000",
                "--rpc",
                "--rpccorsdomain", "*",
                "--rpcvhosts", "*",
                "--rpcaddr", "0.0.0.0",
                "--ws",
                "--wsorigins", "*",
                "--wsaddr", "0.0.0.0",
                "--rpcapi", "admin,db,eth,debug,miner,net,shh,txpool,personal,web3,quorum",
                "dumpconfig"
            ]
        }
    ]
}